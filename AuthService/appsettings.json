{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ValidationSettings": {
    "PasswordMinLength": 8,
    "PasswordMaxLength": 64,
    "PasswordRequireUppercase": true,
    "PasswordRequireLowercase": true,
    "PasswordRequireDigit": true,
    "PasswordRequireSpecial": true,
    "EmailMaxLength": 255,
    "FullNameMaxLength": 100
  },
  "AuthDb": {
    "Host": "localhost",
    "Port": 5433,
    "Database": "authdb",
    "Username": "dekel",
    "Password": "supersecureauth"
  },
  "Jwt": {
    "Key": "super_secret_key_1234567890_abcd",
    "Issuer": "CoursePlatformAuth",
    "Audience": "CoursePlatformUsers",
    "TokenExpirationMinutes": 60
  },
  "Swagger": {
    "Title": "AuthService API",
    "Version": "v1",
    "Description": "Authentication & Authorization endpoints",
    "EnableUI": true,
    "RoutePrefix": "swagger",
    "Auth": {
      "Enabled": true,
      "SchemeName": "Bearer",
      "HeaderName": "Authorization",
      "Scheme": "bearer",
      "BearerFormat": "JWT",
      "In": "Header",
      "Description": "Paste JWT (no quotes)."
    }
  }
}
